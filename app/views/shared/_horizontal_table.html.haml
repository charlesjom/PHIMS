- headers = hashes.first.keys
%table.celled.striped.collapsing.table
    %thead
        %tr
            - headers.each do |header|
                %th.has-text-weight-bold.has-text-centered
                    = t(header, scope: [:headers, type.to_sym, section.to_sym])
    %tbody
        - hashes.each do |hash|
            %tr
                - hash.each do |key, value|
                    %td= value