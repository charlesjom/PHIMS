%h2 New Personal Data
= form_for(@personal_data, url: personal_data_path(@personal_data), method: :post) do |f|
	= f.fields_for :patient_demographics do |p|
		.field
			= p.label "Sex"
			= p.select :sex, PatientDemographics::SEX_CHOICES, required: true
		.field
			= p.label "Birthdate"
			= p.date_field :birthdate, required: true
		.field
			= p.label "Civil Status"
			= p.select :civil_status, PatientDemographics::CIVIL_STATUSES, required: true
		.field
			= p.label "Weight in Kilograms"
			= p.number_field :weight_in_kg
		.field
			= p.label "Height in Centimeters"
			= p.number_field :height_in_cm
		.field
			= p.label "ABO Blood Type"
			= p.select :abo_blood_type, PatientDemographics::ABO_BLOOD_TYPES, required: true
		.field
			= p.label "RH Blood Type"
			= p.select :rh_blood_type, PatientDemographics::RHO_BLOOD_TYPES, required: true
	= f.fields_for :emergency_contacts do |e|
		.field
			= e.label "First Name"
			= e.text_field :first_name, required: true
		.field
			= e.label "Middle Name"
			= e.text_field :middle_name, required: true
		.field
			= e.label "Last Name"
			= e.text_field :last_name, required: true
	= f.fields_for :medications do |m|
		.field
			= h.label "Medicine Name"
			= h.text_field :medicine_name, placeholder: "What medicine/s do you take for this condition?", required: true
	= f.fields_for :vaccinations do |v|
		.field
			= v.label "Target Disease"
			= v.text_field :target_disease, "What disease is the vaccine for?", required: true
		.field
			= v.label "Date Administered"
			= v.date_field :date_administered, required: true
	.actions
		= f.submit "Sign up"