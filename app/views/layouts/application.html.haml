!!!
%html
	%head
		%title PHIMS
		%meta{name: "viewport", content: "width=device-width, initial-scale=1.0, minimum-scale=1.0"}
		= csrf_meta_tags
		= csp_meta_tag
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
		= javascript_include_tag "https://use.fontawesome.com/releases/v5.7.2/js/all.js", integrity: "sha384-0pzryjIRos8mFBWMzSSZApWtPl/5++eIfzYmTgBBmXYdhvxPc+XcFEk+zJwDgWbP", crossorigin: "anonymous"
		= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
	%body
		.ui.basic.segment
			= render partial: 'components/flash_notifications'
			= render partial: 'components/navbar'
		= render partial: 'components/modal'
		.ui.centered.grid.container
			= yield
