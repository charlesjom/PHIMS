%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label "First_Name"
    = f.text_field :first_name, autofocus: true, placeholder: "First Name", required: true
  .field
    = f.label "Middle Name"
    = f.text_field :middle_name, placeholder: "Middle Name", required: true
  .field
    = f.label "Last Name"
    = f.text_field :last_name, placeholder: "Last Name", required: true
  .field
    = f.label "Username"
    = f.text_field :username, placeholder: "Username", required: true
  .field
    = f.label "Email Address"
    %br/
    = f.email_field :email, autocomplete: "email", placeholder: "Email Address", required: true
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "users/shared/links"
