.devise-container
  %h2.title.text-center PHIMS
  .box
    = render "users/shared/error_messages", resource: resource
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .field
        = f.label :first_name, "First Name"
        .control
          = f.text_field :first_name, autofocus: true, placeholder: "First Name", required: true, class: 'input'
      .field
        = f.label :middle_name, "Middle Name"
        .control
          = f.text_field :middle_name, placeholder: "Middle Name", required: true, class: 'input'
      .field
        = f.label :last_name, "Last Name"
        .control
          = f.text_field :last_name, placeholder: "Last Name", required: true, class: 'input'
      .field
        = f.label :username, "Username"
        .control
          = f.text_field :username, placeholder: "Username", required: true, class: 'input'
      .field
        = f.label :email, "Email Address"
        .control
          = f.email_field :email, autocomplete: "email", placeholder: "Email Address", required: true, class: 'input'
      .field
        = f.label :password, "Password"
        .control
          = f.password_field :password, autocomplete: "new-password", class: 'input'
        - if @minimum_password_length
          %p.help
            #{@minimum_password_length} characters minimum
      .field
        = f.label :password_confirmation
        .control
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input'
      .field
        .control.has-text-centered
          = f.submit "Sign up", class: 'button is-primary is-fullwidth'
  = render "users/shared/links"