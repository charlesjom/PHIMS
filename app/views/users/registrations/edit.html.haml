.eight.wide.column
    .centered.aligned.row
        .ui.vertical.segment
            .ui.huge.centered.align.header Edit #{resource_name.to_s.humanize}
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
                = render "users/shared/error_messages", resource: resource
                .required.field
                    %label Name
                    .fields
                        = f.input :first_name, autofocus: true, placeholder: "First Name", required: true, label: false
                        = f.input :middle_name, placeholder: "Middle Name", required: true, label: false
                        = f.input :last_name, placeholder: "Last Name", required: true, label: false
                = f.input :username, placeholder: "Username", required: true
                = f.input :email, autocomplete: "email", placeholder: "Email Address", required: true

                - if @minimum_password_length
                    = f.input :password, hint: "#{@minimum_password_length} characters minimum (leave blank if you don't want to change it)"
                - else
                    = f.input :password
                = f.input :password_confirmation

                = f.input :current_password, required: true, hint: "We need your current password to confirm your changes"
                = f.button :submit, class: 'fluid'
            
            = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'ui button fluid'
