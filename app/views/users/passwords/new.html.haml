.column
  .ui.vertical.center.aligned.segment
    = render "users/shared/error_messages", resource: resource
    .ui.huge.dividing.header Reset Password
    .ui.centered.grid
      .vertical.center.aligned.six.wide.column
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f|
          .field
            = f.label :email
            .control
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'
          .field
            = f.submit "Send me reset password instructions", class: 'ui primary button'
        = render "users/shared/links"
